<?xml version="1.0"?>

<PropertyList>

  <path>hopewell-center.ac</path>

<animation>
<name>Day</name>
<type>material</type>
    <object-name>building</object-name>
<condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
</condition>
<texture>hopewell-center.png</texture>
</animation>

<animation>
<name>Night</name>
<type>material</type>
    <object-name>building</object-name>
<condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
</condition>
<texture>hopewell-center2.png</texture>
</animation>

  <animation>
    <type>material</type>
    <object-name>building</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1.5 </red>
      <green> 1.5 </green>
      <blue>  1.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>building</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

</PropertyList>
